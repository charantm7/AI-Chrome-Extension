{
  "name": "Veritas AI",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A Chrome extension that uses Veritas AI to generate text.",
  "permissions": ["storage", "activeTab", "scripting"],

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/ford.jpeg"
    }
  },
  "host_permissions": ["<all_urls>"]
}
